{
  "name": "ilrd-storage",
  "version": "0.0.0",
  "description": "ILRD Storage",
  "type": "module",
  "main": "./src/main.ts",
  "scripts": {
    "test": "printf 'Application has no tests\n' && exit 1",
    "lint": "tsc --project ./tsconfig.lint.json --noEmit && eslint 'src/**/*.ts'",
    "generate-migrations": "drizzle-kit generate --name=init-db --config=./db-migrations/drizzle.config.ts",
    "commit-migrations": "drizzle-kit migrate --config=./db-migrations/drizzle.config.ts",
    "generate-types": "swagger-typescript-api --modular --no-client -o ./src/utils/types -p ./src/api-docs/openapi.yml && mv ./src/utils/types/data-contracts.ts ./src/utils/types/api.ts",
    "generate-openapi": "redocly build-docs ./src/api-docs/openapi.yml -o ./src/api-docs/openapi.html",
    "check-global-updates": "ncu -g",
    "check-local-updates": "ncu",
    "commit-local-updates": "ncu -u",
    "check-code-deps": "depcheck --ignores=@swc/core,prettier,support-color",
    "check-cir-deps": "dpdm --no-tree --transform --exit-code circular:1 \"src/**/*.ts\"",
    "_test-ci": "printf 'Pipeline does not exist yes' && exit 1",
    "_build": "eslint './src/**/*.ts' && tsc --build --verbose ./tsconfig.prod.json"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.620.0",
    "busboy": "~1.6.0",
    "debug": "~4.3.5",
    "drizzle-orm": "~0.32.1",
    "express": "~4.19.2",
    "helmet": "~7.1.0",
    "mime-types": "~2.1.35",
    "pino-http": "~10.2.0",
    "postgres": "~3.4.4",
    "support-color": "~7.1.0",
    "zod": "~3.23.8"
  },
  "devDependencies": {
    "@swc-node/register": "~1.10.9",
    "@swc/core": "~1.7.2",
    "@redocly/cli": "~1.18.1",
    "@types/busboy": "~1.5.4",
    "@types/debug": "~4.1.12",
    "@types/express": "~4.17.21",
    "@types/mime-types": "~2.1.4",
    "@types/node": "~20.14.12",
    "depcheck": "~1.4.7",
    "dpdm": "~3.14.0",
    "drizzle-kit": "~0.23.0",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-security": "~3.0.1",
    "globals": "~15.8.0",
    "npm-check-updates": "~16.14.20",
    "prettier": "~3.3.3",
    "swagger-typescript-api": "~13.0.13",
    "typescript": "~5.5.4",
    "typescript-eslint": "~7.17.0"
  },
  "author": "Adam Akiva",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://dev.infinitylabs.co.il/adam.akiva/ilrd-storage"
  },
  "bugs": {
    "url": "https://dev.infinitylabs.co.il/adam.akiva/ilrd-storage/issues"
  },
  "maintainers": [
    {
      "name": "Adam Akiva",
      "email": "adam.akiva@infinitylabs.co.il",
      "url": "https://dev.infinitylabs.co.il/adam.akiva"
    }
  ],
  "contributors": [
    {
      "name": "Adam Akiva",
      "email": "adam.akiva@infinitylabs.co.il",
      "url": "https://dev.infinitylabs.co.il/adam.akiva"
    }
  ]
}
